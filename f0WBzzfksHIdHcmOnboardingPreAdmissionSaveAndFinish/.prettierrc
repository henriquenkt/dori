{
  "printWidth": 80,
  "singleQuote": true,
  "semi": true,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "printWidth": 200,
        "singleQuote": true,
        "semi": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 200,
        "singleQuote": false,
        "semi": true
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 80,
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}